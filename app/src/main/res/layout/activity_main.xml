<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9ec2ff"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1"
    tools:context="com.example.liran.minesweeper.com.example.liran.Logic.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="378sp"
        android:layout_height="66sp"
        android:layout_marginTop="60sp"
        android:src="@drawable/black" />

    <LinearLayout
        android:layout_width="356sp"
        android:layout_height="280sp"

        android:layout_weight="0.88"
        android:clickable="true"
        android:gravity="center"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageButton
            android:id="@+id/play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:baselineAlignBottom="false"
            android:src="@drawable/button_play" />

        <ImageButton
            android:id="@+id/high_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/high_scores" />

        <ImageButton
            android:id="@+id/exit"
            android:layout_width="149sp"
            android:layout_height="53sp"
            android:layout_marginBottom="3sp"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/button_exit" />


    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="359sp"
        android:layout_height="113sp"
        android:layout_marginBottom="40sp"
        android:layout_weight="0.26"
        android:src="@drawable/menupic" />
</LinearLayout>



